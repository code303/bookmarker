{
  "name": "bookmarker",
  "version": "0.0.1",
  "description": "A bookmark utility to save and retrieve URLs for later.",
  "main": "/index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-static": "copyfiles -u 1 src/static/**/* dist/",
    "copy": "copyfiles -u 1 build/**/* dist/",
    "build": "npm run clean && tsc && npm run copy-static && npm run copy",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js",
    "dev": "npx nodemon ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code303/bookmarker.git"
  },
  "keywords": [
    "bookmark"
  ],
  "author": "code303",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/code303/bookmarker/issues"
  },
  "homepage": "https://github.com/code303/bookmarker#readme",
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
